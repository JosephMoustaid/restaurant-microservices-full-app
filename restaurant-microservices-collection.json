		{
			"name": "Integration Tests",
			"item": [
				{
					"name": "Full Flow - Create Restaurant then Reservation",
					"item": [
						{
							"name": "1. Create Restaurant",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"pm.test(\"Restaurant created successfully\", function () {",
											"    pm.response.to.have.status(201);",
											"});",
											"",
											"// Save restaurant ID for next request",
											"var jsonData = pm.response.json();",
											"pm.collectionVariables.set(\"restaurant_id\", jsonData.id);"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"name\": \"Integration Test Restaurant\",\n  \"address\": \"999 Test Ave, Test City, TC 99999\",\n  \"cuisine\": \"Integration\",\n  \"rating\": 5.0,\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060\n}"
								},
								"url": {
									"raw": "http://localhost:8888/restaurants",
									"protocol": "http",
									"host": [
										"localhost"
									],
									"port": "8888",
									"path": [
										"restaurants"
									]
								}
							},
							"response": []
						},
						{
							"name": "2. Create Reservation for Restaurant",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"pm.test(\"Reservation created successfully\", function () {",
											"    pm.response.to.have.status(201);",
											"});",
											"",
											"pm.test(\"Reservation has correct restaurant ID\", function () {",
											"    var jsonData = pm.response.json();",
											"    pm.expect(jsonData.restaurantId).to.eql(parseInt(pm.collectionVariables.get(\"restaurant_id\")));",
											"});"
										],
										"type": "text/javascript"
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"restaurantId\": {{restaurant_id}},\n  \"customerName\": \"Integration Test User\",\n  \"reservationTime\": \"2025-12-01T18:00:00\"\n}"
